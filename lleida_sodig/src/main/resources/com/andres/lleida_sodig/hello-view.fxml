<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.andres.lleida_sodig.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <GridPane prefHeight="125.0" prefWidth="250.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
          <Button onAction="#onHelloButtonClick" prefHeight="25.0" prefWidth="285.0" text="Hello!" GridPane.rowIndex="3" />
      
                      <Label fx:id="welcomeText" prefHeight="17.0" prefWidth="254.0" GridPane.rowIndex="2" />
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="Usuario: " />
               <TextField fx:id="txtUsuario" />
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
               <Label text="Clave: " />
               <TextField fx:id="txtClave">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin></TextField>
               <TextField />
            </children>
         </HBox>
         <Button fx:id="btnExcel" mnemonicParsing="false" onAction="#onExcelClickButton" prefHeight="25.0" prefWidth="143.0" text="Excel" textAlignment="CENTER" textFill="#078853" GridPane.halignment="CENTER" GridPane.rowIndex="4">
            <font>
               <Font name="Book Antiqua" size="12.0" />
            </font>
         </Button>
      </children>
   </GridPane>
</VBox>
